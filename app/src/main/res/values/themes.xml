<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TmdbDemoApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/toolbar</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>


    <!-- text size/color -->
    <style name="text_title_white">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_normal_white">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_normal_brown_grey">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/brown_gray</item>
    </style>
</resources>